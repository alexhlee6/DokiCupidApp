<!DOCTYPE html>
<html>
  <head>
    <title>DokiCupid</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%# <%= action_cable_meta_tag %> 
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/c3c0cb51c2.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" type="image/png" href="/favicon.png"/>
    <script>
      window.addEventListener('load', function() {
        document.getElementById("loadOverlay").style.display="none";
      });
    </script>
  </head>

  <body>
    <div id="loadOverlay" style="background-color:#fff; position:absolute; top:0px; left:0px; width:100vw; height:120vh; z-index:2000; display:none;"></div>
    <script>
      document.getElementById("loadOverlay").style.display="block";
    </script>

    <noscript style="width:100vw;height:100vh;display:flex;align-items:center;justify-content:center;">
      You need JavaScript enabled to run this application :( 
    </noscript>

    <%= yield %>
  </body>
</html>
